# Security Settings
SECRET_KEY=your_django_secret_key_here
DEBUG=False

# Host Settings
ALLOWED_HOSTS=your-domain.com
CORS_ALLOWED_ORIGINS=https://your-frontend-domain.com,https://your-backend-domain.com

# Database Configuration
DB_NAME=your_database_name
DB_USER=your_database_user
DB_PASSWORD=your_database_password
DB_HOST=your-database-host.aws.neon.tech
DB_PORT=5432
DB_CONN_MAX_AGE=60
DB_CONNECT_TIMEOUT=10
DB_SSLMODE=require

# Email Configuration
EMAIL_HOST=smtp.gmail.com
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your_app_password_here
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_TIMEOUT=60
DEFAULT_FROM_EMAIL=Your App Name <your-email@gmail.com>
SALES_EMAIL=your-sales@gmail.com
SERVER_EMAIL=your-server@gmail.com

# Admin Configuration
ADMIN_NAME=Admin
ADMIN_EMAIL=your-admin@gmail.com
ADMIN_SITE_HEADER=Your App Administration
ADMIN_SITE_TITLE=Your App Admin Portal
ADMIN_INDEX_TITLE=Welcome to Your App Administration

# API Configuration
API_PAGE_SIZE=10
JWT_ACCESS_TOKEN_LIFETIME=60
JWT_REFRESH_TOKEN_LIFETIME=1
JWT_ROTATE_REFRESH_TOKENS=True
JWT_BLACKLIST_AFTER_ROTATION=True
JWT_UPDATE_LAST_LOGIN=True

# Security Headers
SECURE_SSL_REDIRECT=True
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True
SECURE_BROWSER_XSS_FILTER=True
SECURE_CONTENT_TYPE_NOSNIFF=True
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=True
SECURE_HSTS_PRELOAD=True
SECURE_REFERRER_POLICY=same-origin
X_FRAME_OPTIONS=DENY

# Session Settings
SESSION_COOKIE_AGE=3600
SESSION_SAVE_EVERY_REQUEST=True
SESSION_EXPIRE_AT_BROWSER_CLOSE=True
CSRF_COOKIE_HTTPONLY=True

# Rate Limiting
EMAIL_VERIFICATION_RATE=5/day
ANON_THROTTLE_RATE=100/day
USER_THROTTLE_RATE=1000/day
CONTACT_SUBMISSION_RATE=3/hour

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=your_redis_password_here
REDIS_SOCKET_CONNECT_TIMEOUT=5
REDIS_SOCKET_TIMEOUT=5
REDIS_RETRY_ON_TIMEOUT=True
REDIS_MAX_CONNECTIONS=10

# Cache Configuration
CACHE_BACKEND=django_redis.cache.RedisCache
CACHE_TIMEOUT=300
CACHE_KEY_PREFIX=your_app_cache_prefix

# CORS Settings
CORS_ALLOW_CREDENTIALS=True
CORS_ALLOW_METHODS=DELETE,GET,OPTIONS,PATCH,POST,PUT
CORS_ALLOW_HEADERS=accept,accept-encoding,authorization,content-type,dnt,origin,user-agent,x-csrftoken,x-requested-with
CSRF_TRUSTED_ORIGINS=https://your-frontend-domain.com,https://your-backend-domain.com

# File Upload Settings
FILE_UPLOAD_MAX_MEMORY_SIZE=5242880
DATA_UPLOAD_MAX_MEMORY_SIZE=5242880

# Internationalization
LANGUAGE_CODE=en-us
TIME_ZONE=UTC
USE_I18N=True
USE_TZ=True
DATE_FORMAT=Y-m-d
DATETIME_FORMAT=Y-m-d H:i:s

# Logging
ROOT_LOG_LEVEL=INFO
DJANGO_LOG_LEVEL=INFO
DJANGO_REQUEST_LOG_LEVEL=ERROR
DJANGO_SECURITY_LOG_LEVEL=ERROR
